<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomeMenu" >

    <TextView
        android:id="@+id/MedAppCaptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/MedApp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/IndianRed"
        android:textSize="@dimen/MedAppCaptionTextSize"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp" >

            <Button
                android:id="@+id/AllergicReactionButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_alignParentTop="true"
                android:onClick="startAllergicReactionActivity"
                android:text="@string/_AllergicReaction" />

            <Button
                android:id="@+id/AsthmaAttackButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/AllergicReactionButton"
                android:onClick="startAsthmaActivity"
                android:text="@string/_AsthmaAttack" />

            <Button
                android:id="@+id/BleedingButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/AsthmaAttackButton"
                android:onClick="startBleedingActivity"
                android:text="@string/_Bleeding" />

            <Button
                android:id="@+id/BrokenBoneButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BleedingButton"
                android:onClick="startBrokenBoneActivity"
                android:text="@string/_BrokenBone" />

            <Button
                android:id="@+id/BurnButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BrokenBoneButton"
                android:onClick="startBurnActivity"
                android:text="@string/_Burn" />

            <Button
                android:id="@+id/ChockingButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/BurnButton"
                android:onClick="startChokeActivity"
                android:text="@string/_Choking" />

            <Button
                android:id="@+id/DiabeticButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ChockingButton"
                android:onClick="startDiabeticActivity"
                android:text="@string/_DiabeticEmergency" />

            <Button
                android:id="@+id/DistressButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DiabeticButton"
                android:onClick="startDistressActivity"
                android:text="@string/_Distress" />

            <Button
                android:id="@+id/HeadInjuryButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/DistressButton"
                android:onClick="startHeadInjuryActivity"
                android:text="@string/_HeadInjury" />

            <Button
                android:id="@+id/HeartAttackButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HeadInjuryButton"
                android:onClick="startHeartAttackActivity"
                android:text="@string/_HeartAttack" />

            <Button
                android:id="@+id/HypothermiaButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HeartAttackButton"
                android:onClick="startHypothermiaActivity"                
                android:text="@string/_Hypothermia" />

            <Button
                android:id="@+id/MeningitisButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/HypothermiaButton"
                android:onClick="startMeningitisActivity"
                android:text="@string/Meningitis" />

            <Button
                android:id="@+id/PoisoningButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/MeningitisButton"
                android:onClick="startPoisoningActivity"
                android:text="@string/Poisoning" />

            <Button
                android:id="@+id/EpilepsyButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/PoisoningButton"
                android:onClick="startEpilepsyActivity"
                android:text="@string/Epilepsy" />

            <Button
                android:id="@+id/StrokeButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EpilepsyButton"
                android:onClick="startStrokeActivity"
                android:text="@string/Stroke" />

            <Button
                android:id="@+id/UnconsciousBreathingButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/StrokeButton"
                android:onClick="startUnconsciousBreathingActivity"
                android:text="@string/UnconsciousBreathing" />

            <Button
                android:id="@+id/UnconsciousNotBreathingButton"
                style="@style/HomeMenuButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/UnconsciousBreathingButton"
                android:onClick="startUnconsciousNotBreathingActivity"
                android:text="@string/UnconsciousNotBreathing" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>