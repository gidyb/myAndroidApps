<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CaptionStyle" parent="@android:style/Widget.TextView" >
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="android:textStyle">bold</item>
    </style>
    
   <style name="DrivingTimeStyle" parent="@android:style/Widget.TextView" >
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/Brown</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/OrangeRed</item>
    </style>
    
   <style name="ShowOnMapButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/OrangeRed</item>
    </style>
    
    
    
    
</resources>
